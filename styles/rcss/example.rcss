use common::variables::*;



.container {
    padding();
    color: red;

    h2 {
        color: &primary_color;

        h4 {
            width: 50%;
            color: green;
        }
    }
}

h4 {
    width: 50%;
    color: green;
    animation: 3s hello;
}

@keyframes hello {
    0% {
        color: red;
        opacity: 0;
    }

    10% {
        color: &secondary_color;
        opacity: 1;
    }

    100% {
        color: orange;
    }
}
